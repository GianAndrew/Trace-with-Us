<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/SRC/TraceWithUsLogo.png">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css">
    <title>Trace With Us | Admin Dashboard</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow fixed-top sticky-top">
        <div class="container">

            <a class="navbar-brand" href="/admin">
                <h2 class="display-6 text-primary fw-light"><img src="/SRC/TraceWithUsLogo.png" class="mx-2" width="40"
                        height="40">Trace With<span class="text-dark fw-bold"> Us</span>
                </h2>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><button class="btn btn-danger" data-bs-toggle="modal"
                            data-bs-target="#logoutModal">Log Out</button></li>
                </ul>

            </div>
        </div>
    </nav>

    <% const months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]; %>
    <% const days = ["Monday","Tuesday","Wednesday","Thursday","Friday","Saturday","Sunday"]; %>
    <% const d = new Date(data.timeCreated) %>
    <% const month =  months[d.getMonth()] %>
    <% const day = days[d.getDay() -1] %>


    <div class="container-fluid p-5 bg-light">

        <div class="container p-2 my-2">
            <div class="row gy-3">
                <div class="col-12 col-sm-12 col-md- 12 col-lg-4">
                    <div class="container p-5 border shadow-sm">
                        <h2>Navigation</h2>
                        <hr>
                        <div class="list-group shadow-sm">
                            <a href="/admin"
                                class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                <div><i class="fa fa-th-large me-2"></i>Dashboard</div>
                            </a>
                            <a href="/visitedPage"
                                class="list-group-item list-group-item-action  d-flex justify-content-between align-items-center active">
                                <div><i class="fa fa-check-square-o me-2"></i>Visited</div>
                                <span class="badge bg-light text-primary rounded-pill"><%= totalVisit %>
                                </span>
                            </a>
                            <a href="/userPage"
                                class="list-group-item list-group-item-action d-flex justify-content-between align-items-center ">
                                <div><i class="fa fa-users me-2"></i>User</div>
                                <span class="badge bg-primary text-light rounded-pill"><%= totalUser %></span>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md- 12 col-lg-8">
                    <div class="container p-5 border shadow-sm">
                        <div class="container d-flex justify-content-between align-items-center">
                            <h2><i class="fa fa-check-square-o me-2"></i>Visit Details</h2>
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/visitedPage">Visit Page</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Visit Details</li>
                                </ol>
                            </nav>
                        </div>

                        <hr>
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-12">
                                    <div class="container border p-3">
                                        <%= day %>
                                        <%= month %>
                                        <%= d.getDate() %>,
                                        <%= d.getFullYear()%>
                                        <%= d.getHours() %>:<%= d.getMinutes() %>
                                        <%= d.gethours >= 12 ? 'AM' : 'PM'  %>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <div class="container border my-3 p-3">
                                        <b>Purpose of Visit :</b>
                                        <div class="container alert alert-primary border my-2 py-4">
                                            <%= data.purposeVisit %>
                                        </div>
                                        <b>Temperature :</b>
                                        <div class="container alert alert-primary border my-2 py-4">
                                            <%= data.temperature %> &deg;C
                                        </div>
                                    </div>
                                </div>
                                <!-- <div class="col"></div> -->
                            </div>
                            <hr>
                            <div class="container px-3">
                                <div class="row my-2">
                                    <div class="col-10"><b>Did you have cough or colds for the past 7 days?</b>
                                    </div>
                                    <div class="col"> : <%= data.question_1 %> </div>
                                </div>
                                <div class="row my-2">
                                    <div class="col-10"><b>Did you have fever or flu for the past 7 days:</b></div>
                                    <div class="col"> : <%= data.question_2 %> </div>
                                </div>
                                <div class="row my-2">
                                    <div class="col-10"><b>Did you have any direct contact with a positive CoVid
                                            patient
                                            for the past 7 days?</b></div>
                                    <div class="col"> : <%= data.question_3 %> </div>
                                </div>
                                <div class="row my-2">
                                    <div class="col-10"><b>Have you travelled outside the province/country for the
                                            past 7
                                            days?</b></div>
                                    <div class="col"> : <%= data.question_4 %> </div>
                                </div>
                                <div class="row my-2">
                                    <div class="col-10"><b>Have you ever been hospitalized for the past 7 days?</b>
                                    </div>
                                    <div class="col"> : <%= data.question_5 %> </div>
                                </div>
                            </div>

                            <hr>
                            <div class="row">
                                <div class="col">

                                    <div class="container border my-3 p-3">
                                        <b><i class="fa fa-map-marker me-1"></i> Province/Country
                                            Visited :</b>
                                        <% if(!data.place) { %>
                                        <div class="container alert alert-success border my-2 py-4">
                                            <%= 'None' %>
                                        </div>
                                        <% }else{ %>
                                        <div class="container alert alert-warning border my-2 py-4">
                                            <%= data.place %> </div>
                                        <%} %>
                                        <b><i class="fa fa-hospital-o me-1"></i> Cause of Hospitalization :</b>
                                        <% if(!data.cause) { %>
                                        <div class="container alert alert-success border my-2 py-4">
                                            <%= 'None' %>
                                        </div>
                                        <% }else{ %>
                                        <div class="container alert alert-warning border my-2 py-4">
                                            <%= data.cause %> </div>
                                        <%} %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid bg-light">
        <div class="text-center py-3 border-top">
            <p>Trace with Us &copy; 2022</p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>