<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="./SRC/TraceWithUsLogo.png">


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
        integrity="sha512-SfTiTlX6kk+qitfevl/7LibUOeJWlt9rbyDn92a1DqWOw9vWG2MFoays0sgObmWazO5BQPiFucnnEAjpAB+/Sw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="./CSS/constant.css">

    <title>Trace with Us | Personal Informaion</title>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow">
        <div class="container">

            <a class="navbar-brand" href="/visitHistory">
                <h2 class="display-6 text-primary fw-light"><img src="./SRC/TraceWithUsLogo.png" class="mx-2" width="40"
                        height="40">Trace With<span class="text-dark fw-bold"> Us</span>
                </h2>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto">

                    <li class="d-block d-lg-none nav-item"><a href="/visitHistory" class="nav-link">Visit History</a>
                    </li>
                    <li class="d-block d-lg-none nav-item"><a href="/personalInfo" class="nav-link"></i>Personal
                            Info</a>
                    </li>
                    <li class="d-block d-lg-none nav-item"><a href="/" class="nav-link">New Form</a></li>
                    <li class="d-block d-lg-none nav-item">
                        <hr>
                        <form action="/logOut" method="post">
                            <div class="d-grid py-2">
                                <button type="submit" class="__my-btn-danger btn"><i class="fa fa-sign-out me-1"></i>
                                    Log Out</button>
                            </div>
                        </form>
                    </li>

                    <li class="d-none d-lg-block nav-item dropdown rounded-3 bg-light px-2 py-2">
                        <a href="#" class="nav-link dropdown-toggle btn border fs-5" id="navDrop" role="button"
                            data-bs-toggle="dropdown">
                            <i class="fa fa-user"></i>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="/visitHistory" class="dropdown-item">
                                    <div class="row">
                                        <div class="col-2">
                                            <i class="fa fa-history"></i>
                                        </div>
                                        <div class="col">Visit History</div>
                                    </div>

                                </a>
                            </li>
                            <li>
                                <a href="/" class="dropdown-item">
                                    <div class="row">
                                        <div class="col-2"><i class="fa fa-plus"></i></div>
                                        <div class="col">New Form</div>
                                    </div>
                                </a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <div class="d-grid container text-center">
                                    <button type="button" class="__my-btn-danger btn" data-bs-toggle="modal"
                                        data-bs-target="#logoutModal"><i class="fa fa-sign-out me-1"></i>
                                        Log Out</button>
                                </div>
                            </li>
                        </ul>
                    </li>
                </ul>

            </div>
        </div>
    </nav>

    <% const months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]; %>

    <% const birthDate = new Date(user.birthday) %>

    <% const firstDoseDate = new Date(user.firstDose) %>
    <% const secondDoseDate = new Date(user.secondDose) %>

    <% const birthMonth =  months[birthDate.getMonth()] %>
    <% const firstDoseMonth =  months[firstDoseDate.getMonth()] %>
    <% const secondDoseMonth =  months[secondDoseDate.getMonth()] %>


    <div class="container-fluid bg-light">

        <div class="container p-5">
            <div class="container pt-3 px-5 my-2 bg-light border rounded-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/selectedPage">Pages</a></li>
                        <li class="breadcrumb-item"><a href="/visitHistory">Visit History</a></li>
                        <li class="breadcrumb-item active">Personal Information</li>
                    </ol>
                </nav>
            </div>
            <div class="card shadow">
                <div class="card-header"><i class="fa fa-info-circle me-1"></i> Personal Information</div>
                <div class="card-body p-5">


                    <div class="row py-4 my-2 rounded-3">
                        <div class="col-12 col-sm-12 col-md-12 col-lg-6">
                            <div class="row">
                                <div class="col-6 col-sm-6 col-md-4 fw-bold">Firstname</div>
                                <div class="col">: <%= user.firstname %> </div>
                            </div>
                            <div class="row">
                                <div class="col-6 col-sm-6 col-md-4 fw-bold">Lastname</div>
                                <div class="col">: <%= user.lastname %> </div>
                            </div>
                            <div class="row">
                                <div class="col-6 col-sm-6 col-md-4 fw-bold">Middlename</div>
                                <div class="col">: <%= user.middlename %> </div>
                            </div>
                            <div class="row">
                                <div class="col-6 col-sm-6 col-md-4 fw-bold">Birthday</div>
                                <div class="col">:
                                    <%= birthMonth %>
                                    <%= birthDate.getDate() %>,
                                    <%= birthDate.getFullYear()%>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-12 col-lg-6">
                            <div class="row">
                                <div class="col-6 col-sm-6 col-md-4 fw-bold">Suffix</div>
                                <div class="col">:
                                    <% if(!user.suffix){ %>
                                    <%= 'None' %>
                                    <% } else{%>
                                    <%= user.suffix %>
                                    <% } %>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6 col-sm-6 col-md-4 fw-bold">Sex</div>
                                <div class="col">: <%= user.sex %> </div>
                            </div>
                            <div class="row">
                                <div class="col-6 col-sm-6 col-md-4 fw-bold">Age</div>
                                <div class="col">: <%= user.age %> years old</div>
                            </div>
                        </div>
                    </div>



                    <hr>
                    <div class="row py-4 my-2 rounded-3">
                        <div class="col-12 col-sm-12 col-md-12 col-lg-6">
                            <div class="row">
                                <div class="col-4 col-sm-4 col-md-4 fw-bold">Email</div>
                                <div class="col">: <%= user.email %> </div>
                            </div>
                            <div class="row">
                                <div class="col-6 col-sm-6 col-md-4 fw-bold">Contact No.</div>
                                <div class="col">: <%= user.contactNumber %> </div>
                            </div>
                            <div class="row">
                                <div class="col-6 col-sm-6 col-md-4 fw-bold">City</div>
                                <div class="col">: <%= user.city %> </div>
                            </div>
                            <div class="row">
                                <div class="col-6 col-sm-6 col-md-4 fw-bold">Province</div>
                                <div class="col">: <%= user.province %> </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-12 col-lg-6">
                            <div class="row">
                                <div class="col-6 col-sm-6 col-md-4 fw-bold">Lot No.</div>
                                <div class="col">: <%= user.lotNumber %> </div>
                            </div>
                            <div class="row">
                                <div class="col-6 col-sm-6 col-md-4 fw-bold">Street No.</div>
                                <div class="col">: <%= user.streetNumber %></div>
                            </div>
                            <div class="row">
                                <div class="col-6 col-sm-6 col-md-4 fw-bold">Zip Code</div>
                                <div class="col">: <%= user.zipCode %> </div>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row py-4 my-2 rounded-3">
                        <h4 class="mb-4 card-title">Vaccine Info</h4>

                        <div class="col-12 col-sm-12 col-md-12 col-lg-4">
                            <div class="row">
                                <div class="col-6 col-sm-6 col-md-6 fw-bold">Vaccine</div>
                                <div class="col">: <%= user.vaccine %> </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-12 col-lg-4">
                            <div class="row">
                                <div class="col-6 col-sm-6 col-md-6 fw-bold">First Dose</div>
                                <div class="col">:
                                    <%= firstDoseMonth %>
                                    <%= firstDoseDate.getDate() %>,
                                    <%= firstDoseDate.getFullYear()%>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-12 col-lg-4">
                            <div class="row">
                                <div class="col-6 col-sm-6 col-md-6 fw-bold">Second Dose</div>
                                <div class="col">:
                                    <%= secondDoseMonth %>
                                    <%= secondDoseDate.getDate() %>,
                                    <%= secondDoseDate.getFullYear()%>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
    <div class="container-fluid bg-light">
        <hr>
        <div class="container text-center">
            <p class="lead fs-6"> Trace with Us &copy; 2022</p>
        </div>
    </div>



    <!-- MODAL - FOR LOG OUT -->

    <div class="modal" tabindex="-1" id="logoutModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Log Out</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Do you want to log out?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                    <form action="/logOut" method="post">
                        <button type="submit" class="btn btn-outline-danger">Log Out</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>