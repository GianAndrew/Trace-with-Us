    <!--The main section where the contact tracing form is created-->
    <div class="container-fluid min-vh-100">
        <div class="container bg-light border shadow rounded-3 my-5 p-5">
            <div class="container">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/selectedPage">Pages</a></li>
                        <li class="breadcrumb-item">Contact Tracing Form</li>
                    </ol>
                </nav>
            </div>
            <h2 class="display-4">Contact Tracing Form</h2>
            <hr>
            <form action="/healthForm" method="POST">
                <div class="row">
                    <div class="col-8">
                        <label for="purposeOfVisit" class="form-label">Purpose of Visit</label>
                        <input type="text" class="form-control" name="purpose" id="purposeOfVisit" placeholder="Purpose"
                            required>
                    </div>
                    <div class="col-4">
                        <label for="temp" class="form-label">Temperature</label>
                        <input type="number" class="form-control" name="temp" id="temperature" placeholder="36.0"
                            min="33" max="42" required>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col">
                        <p><b>Directions : </b><span class="lead fs-6">Please read and answer the form below for contact
                                tracing purposes. All your
                                answers will be confidential. This is conducted for everyone's safety. Thank you!</span>
                        </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        <div class="text-center">
                            <h5>Questions</h5>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="text-center">
                            <h5>Answer</h5>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="container my-2 p-5 border">
                            <div class="row my-3">
                                <label for="qOne" class="col-10"><b>1.</b> Did you have cough or colds for the past
                                    7
                                    days?</label>
                                <div class="col-2">
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="qOne" id="yes1" value="YES">
                                        <label class="form-check-label" for="yes1">YES</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="qOne" id="no1" value="NO">
                                        <label class="form-check-label" for="no1">NO</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row my-3">
                                <label for="qTwo" class="col-10"><b>2.</b> Did you have fever or flu for the past 7
                                    days?</label>
                                <div class="col-2">
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="qTwo" id="yes2" value="YES">
                                        <label class="form-check-label" for="yes2">YES</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="qTwo" id="no2" value="NO">
                                        <label class="form-check-label" for="no2">NO</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row my-3">
                                <label for="qThree" class="col-10"><b>3.</b> Did you have any direct contact with a
                                    positive CoVid patient for the past 7 days?</label>
                                <div class="col-2">
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="qThree" id="yes3"
                                            value="YES">
                                        <label class="form-check-label" for="yes3">YES</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="qThree" id="no3" value="NO">
                                        <label class="form-check-label" for="no3">NO</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row my-3">
                                <label for="qFour" class="col-10"><b>4.</b> Have you travelled outside the
                                    province/country for the past 7 days?</label>
                                <div class="col-2">
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="qFour" id="yes4" value="YES"
                                            onclick="hNS1(0)">
                                        <label class="form-check-label" for="yes4">YES</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="qFour" id="no4" value="NO"
                                            onclick="hNS1(1)">
                                        <label class="form-check-label" for="no4">NO</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row my-3" id="hideAndShow1">
                                <div class="col-12">
                                    <div class="my-2">
                                        <label for="place" class="form-label">Province/Country Visited: </label> <br>
                                        <input type="text" name="place" id="place" class="form-control"
                                            placeholder="Province/Country">
                                    </div>

                                </div>
                            </div>
                            <div class="row my-3">
                                <label for="qFive" class="col-10"><b>5.</b> Have you ever been hospitalized for the past
                                    7 days?</label>
                                <div class="col-2">
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="qFive" id="yes5" value="YES"
                                            onclick="hNS2(0)">
                                        <label class="form-check-label" for="yes5">YES</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="qFive" id="no5" value="NO"
                                            onclick="hNS2(1)">
                                        <label class="form-check-label" for="no5">NO</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row my-3" id="hideAndShow2">
                                <div class="col-12">
                                    <div class="my-2">
                                        <label for="place" class="form-label">Cause of Hospitalization </label> <br>
                                        <input type="text" name="cause" id="cause" class="form-control"
                                            placeholder="Cause of Hospitalization">
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row my-2">
                    <div class="d-grid">
                        <button type="submit" class="__submit-btn-primary btn bg-gradient">Submit</button>
                    </div>
                </div>
            </form>
        </div>

    </div>
